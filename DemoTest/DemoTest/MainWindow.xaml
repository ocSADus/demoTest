<Window x:Class="DemoTest.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DemoTest"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Login"
                       Margin="5" />
            <TextBox MinWidth="300"
                     Margin="5" />
            <TextBlock Text="Login"
                       Margin="5" />
            <PasswordBox MinWidth="300"
                     Margin="5" />
            <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                <Button Content="Sign In"
                        Margin="5"
                        MinWidth="100" Background="DarkSlateBlue" Foreground="White"/>
                <Button Content="Sign Up"
                        Margin="5"
                        MinWidth="100" Background="MediumSeaGreen"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
